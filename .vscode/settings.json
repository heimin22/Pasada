{
    // Flutter SDK configuration
    "dart.flutterSdkPath": "/usr/lib/flutter",
    "flutter.sdkPath": "/usr/lib/flutter",

    // Dart SDK configuration (use Flutter's Dart for analyzer)
    "dart.sdkPath": "/usr/bin",

    // Flutter development settings
    "dart.devToolsPort": 3000,
    "dart.flutterRunAdditionalArgs": [
        "--web-port=8080",
        "--web-hostname=0.0.0.0"
    ],
    "dart.hotReloadOnSave": "all",
    "dart.hotRestartOnSave": "never",

    // Code formatting and analysis
    "dart.lineLength": 80,
    "dart.enableSdkFormatter": true,
    "dart.enableSdkFormatterForAllFiles": true,

    // Editor settings for Flutter development
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },

    // File associations
    "files.associations": {
        "*.dart": "dart",
        "*.yaml": "yaml",
        "*.yml": "yaml"
    },

    // Performance settings
    "dart.analyzerAdditionalArgs": [
        "--enable-experiment=non-nullable"
    ],

    // Workspace settings
    "files.autoSave": "onFocusChange",
    "editor.minimap.enabled": true,
    "editor.rulers": [80],
    "editor.tabSize": 2,
    "editor.insertSpaces": true,

    // Language specific settings
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [80],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off"
    },

    "[yaml]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },

    "[json]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "java.configuration.updateBuildConfiguration": "interactive"
}
